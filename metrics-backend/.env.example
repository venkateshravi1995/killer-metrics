DATABASE_URL=postgresql+psycopg://postgres:POSTGRES@localhost:5432/postgres
# Alternatively, provide PG_* values instead of DATABASE_URL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=postgres
PG_USER=postgres
PG_PASSWORD=POSTGRES
# Optional pool tuning
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
NEON_AUTH_BASE_URL=https://ep-divine-sky-a1rn9tg7.neonauth.ap-southeast-1.aws.neon.tech/neondb/auth
NEON_AUTH_JWKS_URL=https://ep-divine-sky-a1rn9tg7.neonauth.ap-southeast-1.aws.neon.tech/neondb/auth/.well-known/jwks.json

# Redis (Upstash) cache for API responses/JWKS
REDIS_URL=rediss://USER:PASSWORD@HOST:6379
# KV_URL=rediss://USER:PASSWORD@HOST:6379

# API cache TTLs (seconds)
API_CACHE_TTL_SECONDS=60
API_CACHE_TTL_CATALOG_SECONDS=300
API_CACHE_TTL_SEARCH_SECONDS=120
API_CACHE_TTL_QUERY_SECONDS=60
